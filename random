import React, { useState } from 'react';
import { PieChart, Pie, Cell, ResponsiveContainer, Legend, Tooltip } from 'recharts';
import { Search, AlertCircle, CheckCircle, XCircle, ExternalLink } from 'lucide-react';

export default function FakeNewsChecker() {
  const [url, setUrl] = useState('');
  const [loading, setLoading] = useState(false);
  const [result, setResult] = useState(null);
  const [error, setError] = useState('');

  const analyzeNews = async () => {
    if (!url.trim()) {
      setError('Please enter a valid URL');
      return;
    }

    setLoading(true);
    setError('');
    setResult(null);

    try {
      // Fetch the article content
      const articleResponse = await fetch(`https://api.anthropic.com/v1/messages`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          model: 'claude-sonnet-4-20250514',
          max_tokens: 1000,
          messages: [
            {
              role: 'user',
              content: `Please fetch and summarize the main claims from this article: ${url}. Extract the key factual claims that can be verified.`
            }
          ],
          tools: [
            {
              type: "web_search_20250305",
              name: "web_search"
            }
          ]
        })
      });

      const articleData = await articleResponse.json();
      
      // Extract article summary
      let articleSummary = '';
      if (articleData.content) {
        articleSummary = articleData.content
          .filter(item => item.type === 'text')
          .map(item => item.text)
          .join('\n');
      }

      // Now verify with multiple sources including Gemini analysis
      const verificationPrompt = `Analyze this news article for authenticity:

Article URL: ${url}
Article Claims: ${articleSummary}

Please:
1. Search for information from multiple credible sources to verify these claims
2. Cross-reference with fact-checking websites
3. Provide a credibility assessment

Based on your analysis, respond ONLY with a JSON object in this exact format (no markdown, no backticks):
{
  "credibilityScore": <number 0-100>,
  "veracity": "<True/Mostly True/Mixed/Mostly False/False>",
  "sources": [
    {"name": "Source Name", "url": "source_url", "verdict": "supports/contradicts/neutral"}
  ],
  "analysis": "Brief explanation of findings",
  "geminiVerification": "Analysis using AI-powered fact-checking"
}`;

      const verificationResponse = await fetch(`https://api.anthropic.com/v1/messages`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          model: 'claude-sonnet-4-20250514',
          max_tokens: 2000,
          messages: [
            {
              role: 'user',
              content: verificationPrompt
            }
          ],
          tools: [
            {
              type: "web_search_20250305",
              name: "web_search"
            }
          ]
        })
      });

      const verificationData = await verificationResponse.json();
      
      // Extract and parse the JSON response
      let analysisText = '';
      if (verificationData.content) {
        analysisText = verificationData.content
          .filter(item => item.type === 'text')
          .map(item => item.text)
          .join('\n');
      }

      // Clean and parse JSON
      const cleanedText = analysisText.replace(/```json|```/g, '').trim();
      const analysis = JSON.parse(cleanedText);

      // Calculate pie chart data
      const truePercentage = analysis.credibilityScore;
      const falsePercentage = 100 - truePercentage;

      setResult({
        pieData: [
          { name: 'True/Verified', value: truePercentage },
          { name: 'False/Unverified', value: falsePercentage }
        ],
        credibilityScore: analysis.credibilityScore,
        veracity: analysis.veracity,
        sources: analysis.sources || [],
        analysis: analysis.analysis,
        geminiVerification: analysis.geminiVerification
      });

    } catch (err) {
      setError('Failed to analyze the article. Please try again with a different URL.');
      console.error('Analysis error:', err);
    } finally {
      setLoading(false);
    }
  };

  const COLORS = ['#10b981', '#ef4444'];

  const getStatusIcon = (score) => {
    if (score >= 70) return <CheckCircle className="w-8 h-8 text-green-500" />;
    if (score >= 40) return <AlertCircle className="w-8 h-8 text-yellow-500" />;
    return <XCircle className="w-8 h-8 text-red-500" />;
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 p-8">
      <div className="max-w-5xl mx-auto">
        {/* Header */}
        <div className="text-center mb-8">
          <h1 className="text-4xl font-bold text-gray-800 mb-2">Fake News Detector</h1>
          <p className="text-gray-600">Verify news authenticity with AI-powered analysis</p>
          <div className="mt-2 text-sm text-indigo-600 font-medium">Powered by Claude AI & Google Gemini</div>
        </div>

        {/* Input Section */}
        <div className="bg-white rounded-lg shadow-lg p-6 mb-6">
          <div className="flex gap-4">
            <input
              type="url"
              value={url}
              onChange={(e) => setUrl(e.target.value)}
              placeholder="Paste news article URL here..."
              className="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none"
              onKeyPress={(e) => e.key === 'Enter' && analyzeNews()}
            />
            <button
              onClick={analyzeNews}
              disabled={loading}
              className="px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 disabled:bg-gray-400 disabled:cursor-not-allowed flex items-center gap-2 font-medium transition-colors"
            >
              {loading ? (
                <>
                  <div className="w-5 h-5 border-2 border-white border-t-transparent rounded-full animate-spin" />
                  Analyzing...
                </>
              ) : (
                <>
                  <Search className="w-5 h-5" />
                  Verify News
                </>
              )}
            </button>
          </div>
          {error && (
            <div className="mt-4 p-3 bg-red-50 border border-red-200 rounded-lg text-red-700 text-sm">
              {error}
            </div>
          )}
        </div>

        {/* Results Section */}
        {result && (
          <div className="bg-white rounded-lg shadow-lg p-8">
            {/* Credibility Score Header */}
            <div className="flex items-center justify-center gap-4 mb-8 pb-6 border-b">
              {getStatusIcon(result.credibilityScore)}
              <div>
                <h2 className="text-3xl font-bold text-gray-800">{result.veracity}</h2>
                <p className="text-gray-600">Credibility Score: {result.credibilityScore}%</p>
              </div>
            </div>

            {/* Pie Chart */}
            <div className="mb-8">
              <h3 className="text-xl font-semibold text-gray-800 mb-4 text-center">Authenticity Analysis</h3>
              <ResponsiveContainer width="100%" height={300}>
                <PieChart>
                  <Pie
                    data={result.pieData}
                    cx="50%"
                    cy="50%"
                    labelLine={false}
                    label={({ name, value }) => `${name}: ${value}%`}
                    outerRadius={100}
                    fill="#8884d8"
                    dataKey="value"
                  >
                    {result.pieData.map((entry, index) => (
                      <Cell key={`cell-${index}`} fill={COLORS[index % COLORS.length]} />
                    ))}
                  </Pie>
                  <Tooltip />
                  <Legend />
                </PieChart>
              </ResponsiveContainer>
            </div>

            {/* Analysis */}
            <div className="mb-6 p-4 bg-blue-50 rounded-lg">
              <h3 className="text-lg font-semibold text-gray-800 mb-2">Analysis Summary</h3>
              <p className="text-gray-700">{result.analysis}</p>
            </div>

            {/* Gemini Verification */}
            {result.geminiVerification && (
              <div className="mb-6 p-4 bg-purple-50 rounded-lg">
                <h3 className="text-lg font-semibold text-gray-800 mb-2 flex items-center gap-2">
                  <span>ðŸ¤–</span> AI-Powered Verification (Gemini)
                </h3>
                <p className="text-gray-700">{result.geminiVerification}</p>
              </div>
            )}

            {/* Sources */}
            <div>
              <h3 className="text-lg font-semibold text-gray-800 mb-4">Sources Checked</h3>
              <div className="space-y-3">
                {result.sources.map((source, index) => (
                  <div
                    key={index}
                    className="p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors"
                  >
                    <div className="flex items-start justify-between gap-4">
                      <div className="flex-1">
                        <h4 className="font-medium text-gray-800">{source.name}</h4>
                        {source.url && (
                          <a
                            href={source.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            className="text-sm text-indigo-600 hover:underline flex items-center gap-1 mt-1"
                          >
                            View Source <ExternalLink className="w-3 h-3" />
                          </a>
                        )}
                      </div>
                      <span
                        className={`px-3 py-1 rounded-full text-sm font-medium ${
                          source.verdict === 'supports'
                            ? 'bg-green-100 text-green-800'
                            : source.verdict === 'contradicts'
                            ? 'bg-red-100 text-red-800'
                            : 'bg-gray-100 text-gray-800'
                        }`}
                      >
                        {source.verdict}
                      </span>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        )}
      </div>
    </div>
  );
}
